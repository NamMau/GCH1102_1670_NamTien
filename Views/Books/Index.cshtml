@model IEnumerable<WebAppDemo3.Models.Book>

@{
    ViewData["Title"] = "Index";
}
<style>
    .table > :not(:last-child) > :last-child > * {
        border-bottom-color: currentColor;
        background-color: #15375a;
        /* text-align: center;*/
        color: #FFF;
    }

    .table td, .table th {
        padding: 0.75rem;
        vertical-align: top;
        border-top: 1px solid #dee2e6;
        /* text-align: center;*/
    }
    /*.table{
            margin-right:50px;
        }*/
</style>
<h1 style="color:orangered">Books</h1>


<p>
    <a class="btn btn-outline-warning" asp-action="Create">Create New</a>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublishedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
                <td>
                    <img src="@item.Image"
                     class="rounded-circle"
                     height="100" width="100"
                     asp-append-version="true" />
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublishedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                <td> <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.BookId">Edit</a></td>
                <td> <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.BookId">Details</a></td>
                <td> <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.BookId">Delete</a></td
            </td>
        </tr>
}
    </tbody>
</table>
