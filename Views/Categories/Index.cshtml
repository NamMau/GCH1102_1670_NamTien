@model IEnumerable<WebAppDemo3.Models.Category>

@{
    ViewData["Title"] = "Index";
}
<style>
    .table>:not(:last-child)>:last-child>* {
    border-bottom-color: currentColor;
    background-color: #15375a;
    text-align: center;
    color: #FFF;
}

    .table td, .table th {
        padding: 0.75rem;
        vertical-align: top;
        border-top: 1px solid #dee2e6;
    text-align: center;

    }
</style>
<h1 style="color:orangered">Categories</h1>


<p>
    <a class="btn btn-outline-warning" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
                <td>
                        <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> 
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.CategoryId">Details</a> 
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
                </td>
        </tr>
}
    </tbody>
</table>
